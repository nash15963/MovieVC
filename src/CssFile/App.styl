.video-frame{
    position: relative
    width: 100%
    height: 0
    padding-bottom: 56.25%
    iframe{
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
    }
    
    .loading {
        position: absolute
        background: #928888
        width: 100%
        height: 100%
        overflow: hidden
    }
    .loading:after {
        content: "";
        display: block;
        position: absolute;
        top: 0
        left: 0
        width: 100%
        height: 100%
        transform: translateX(-100px)
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent)
        animation: loading 0.6s infinite
        // background: rgba(13, 12, 12, 0.2)
    }
