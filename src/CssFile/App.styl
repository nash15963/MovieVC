// css loader
.loader {
    width: 48px
    height: 48px
    border-radius: 50%
    display: inline-block
    border-top: 3px solid systemColor
    border-right: 3px solid transparent
    box-sizing: border-box
    animation: rotation 1s linear infinite
    margin: 0px auto
}

@keyframes rotation {
  0% {
    transform: rotate(0deg)
  }
  100% {
    transform: rotate(360deg)
  }
} 
