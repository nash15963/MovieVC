    border-radius: 50%
    height: 20px
    position: absolute
    width: 20px
    overflow: hidden
}

.heart-before {
    top: -10px
    left: 0
}

.heart-after {
    left: 10px
    top: 0
}
.heart-click{
    color: nodataColor
    position: relative
    top: -60px
    left: 25px
    transition: left 0.6s
    width: 120px
    visibility: hidden
}

